    "configurations": [
        {
            "name": "Compile the encode_decode executable",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\output\\encode_decode.exe",
            "cwd": "${workspaceFolder}\\output\\",
            "preLaunchTask": "C/C++: g++.exe compile encode_decode"
        },
        {
            "name": "Test the info and sector extractor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\output\\test_info_extract.exe",
            "cwd": "${workspaceFolder}\\output\\",
            "preLaunchTask": "C/C++: g++.exe compile test_info_extract"
        },
        {
            "name": "Test the encoder and decoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\output\\test_encode_decode.exe",
            "cwd": "${workspaceFolder}\\output\\",
            "preLaunchTask": "C/C++: g++.exe compile test_encode_decode"
        },
        {
            "name": "Test the file encoder and decoder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\output\\test_file_encode_decode.exe",
            "cwd": "${workspaceFolder}\\output\\",
            "preLaunchTask": "C/C++: g++.exe compile test_file_encode_decode"
        }
    ]
